/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background-color: #F9FAFB;
    color: #111827;
    line-height: 1.6;
}

.container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
}

/* Header */
.header {
    background-color: white;
    border-bottom: 1px solid #E5E7EB;
}

.header-sticky {
    position: sticky;
    top: 0;
    z-index: 50;
}

.header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
}

.logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
}

.logo-icon {
    width: 32px;
    height: 32px;
    background-color: #111827;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.875rem;
    font-weight: 700;
}

.logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: #111827;
}

.nav-menu {
    display: none;
    gap: 2rem;
}

.nav-link {
    color: #6B7280;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
}

.nav-link:hover,
.nav-link.active {
    color: #111827;
}

.header-actions {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.icon-btn {
    background: none;
    border: none;
    color: #6B7280;
    cursor: pointer;
    padding: 0.5rem;
    transition: color 0.2s;
}

.icon-btn:hover {
    color: #111827;
}

.user-avatar {
    width: 36px;
    height: 36px;
    background-color: #111827;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 0.875rem;
    font-weight: 600;
    cursor: pointer;
}

.btn-text {
    color: #6B7280;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
}

.btn-text:hover {
    color: #111827;
    background-color: #F3F4F6;
}

.btn-text:disabled {
    opacity: 0.6;
    cursor: not-allowed;
}

/* Logout button specific styling */
#logoutBtn {
    color: #EF4444;
    font-weight: 600;
    transition: all 0.2s ease;
}

#logoutBtn:hover {
    color: #DC2626;
    background-color: #FEE2E2;
}

#logoutBtn:disabled {
    opacity: 0.5;
    cursor: wait;
}

.btn-primary {
    background-color: #111827;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    transition: background-color 0.2s;
    border: none;
    cursor: pointer;
    display: inline-block;
}

.btn-primary:hover {
    background-color: #1F2937;
}

.btn-secondary {
    background-color: white;
    color: #111827;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    border: 2px solid #E5E7EB;
    transition: border-color 0.2s;
    display: inline-block;
}

.btn-secondary:hover {
    border-color: #111827;
}

.btn-large {
    padding: 1rem 2rem;
    border-radius: 12px;
}

.btn-full {
    width: 100%;
}

/* Hero Section */
.hero-section {
    padding: 5rem 0;
}

.hero-content {
    text-align: center;
    max-width: 48rem;
    margin: 0 auto 4rem;
}

.hero-title {
    font-size: 3rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.5rem;
    line-height: 1.2;
}

.hero-description {
    font-size: 1.25rem;
    color: #6B7280;
    margin-bottom: 2rem;
}

.hero-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
}

/* Feature Grid */
.feature-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 5rem;
}

.feature-card {
    background-color: white;
    border: 1px solid #E5E7EB;
    border-radius: 16px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s;
    cursor: pointer;
}

.feature-card:hover {
    border-color: #111827;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
}

.feature-icon {
    font-size: 3rem;
    margin-bottom: 0.75rem;
}

.feature-title {
    color: #111827;
    font-weight: 600;
    font-size: 1rem;
}

/* Stats Grid */
.stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    max-width: 42rem;
    margin: 0 auto;
    text-align: center;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    color: #111827;
}

.stat-label {
    color: #6B7280;
    font-size: 0.875rem;
    margin-top: 0.25rem;
}

/* Auth Pages */
.auth-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
}

.auth-container {
    width: 100%;
    max-width: 28rem;
}

.auth-card {
    background-color: white;
    border-radius: 16px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid #E5E7EB;
    padding: 2rem;
}

.back-button {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #6B7280;
    text-decoration: none;
    font-size: 0.875rem;
    margin-bottom: 1.5rem;
    transition: color 0.2s;
}

.back-button:hover {
    color: #111827;
}

.auth-header {
    text-align: center;
    margin-bottom: 2rem;
}

.auth-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.auth-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 0.5rem;
}

.auth-subtitle {
    color: #6B7280;
    font-size: 1rem;
}

/* Form Styles */
.auth-form {
    margin-bottom: 2rem;
}

.form-group {
    margin-bottom: 1.25rem;
}

.form-group label {
    display: block;
    font-size: 0.875rem;
    font-weight: 500;
    color: #374151;
    margin-bottom: 0.5rem;
}

.form-group input {
    width: 100%;
    padding: 0.75rem 1rem;
    background-color: white;
    border: 1px solid #D1D5DB;
    border-radius: 8px;
    font-size: 1rem;
    color: #111827;
    transition: all 0.2s;
}

.form-group input:focus {
    outline: none;
    border-color: #111827;
    box-shadow: 0 0 0 3px rgba(17, 24, 39, 0.1);
}

.form-group input::placeholder {
    color: #9CA3AF;
}

.form-checkbox {
    display: flex;
    align-items: flex-start;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
}

.form-checkbox input[type="checkbox"] {
    width: 1rem;
    height: 1rem;
    margin-top: 0.25rem;
    cursor: pointer;
}

.form-checkbox label {
    font-size: 0.875rem;
    color: #6B7280;
    cursor: pointer;
}

.form-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.25rem;
}

.link {
    color: #111827;
    cursor: pointer;
}

.link:hover {
    text-decoration: underline;
}

.link-small {
    font-size: 0.875rem;
    color: #111827;
    text-decoration: none;
}

.link-small:hover {
    text-decoration: underline;
}

.link-bold {
    color: #111827;
    font-weight: 600;
    text-decoration: none;
}

.link-bold:hover {
    text-decoration: underline;
}

.auth-footer {
    text-align: center;
    font-size: 0.875rem;
    color: #6B7280;
}

/* Social Login */
.social-login {
    margin-top: 2rem;
}

.divider {
    position: relative;
    text-align: center;
    margin-bottom: 1.5rem;
}

.divider::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background-color: #E5E7EB;
}

.divider span {
    position: relative;
    background-color: white;
    padding: 0 0.5rem;
    color: #6B7280;
    font-size: 0.875rem;
}

.social-buttons {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.75rem;
}

.social-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    background-color: white;
    border: 1px solid #D1D5DB;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.2s;
}

.social-btn:hover {
    background-color: #F9FAFB;
}

.social-btn span {
    color: #374151;
    font-size: 0.875rem;
}

/* Home Page */
.main-content {
    padding: 2rem 0;
}

.search-section {
    margin-bottom: 2rem;
}

.page-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: #111827;
    margin-bottom: 1.5rem;
}

.search-bar {
    position: relative;
    margin-bottom: 1.5rem;
}

.search-icon {
    position: absolute;
    left: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: #9CA3AF;
}

.search-bar input {
    width: 100%;
    padding: 0.75rem 1rem 0.75rem 3rem;
    background-color: white;
    border: 1px solid #D1D5DB;
    border-radius: 12px;
    font-size: 1rem;
    color: #111827;
    transition: all 0.2s;
}

.search-bar input:focus {
    outline: none;
    border-color: #111827;
    box-shadow: 0 0 0 3px rgba(17, 24, 39, 0.1);
}

.category-filter {
    display: flex;
    gap: 0.5rem;
    overflow-x: auto;
    padding-bottom: 0.5rem;
}

.category-filter::-webkit-scrollbar {
    display: none;
}

.category-btn {
    padding: 0.5rem 1rem;
    background-color: white;
    border: 1px solid #E5E7EB;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #6B7280;
    white-space: nowrap;
    cursor: pointer;
    transition: all 0.2s;
}

.category-btn:hover {
    background-color: #F9FAFB;
}

.category-btn.active {
    background-color: #111827;
    color: white;
    border-color: #111827;
}

/* Skills Grid */
.skills-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
}

.skill-card {
    background-color: white;
    border: 1px solid #E5E7EB;
    border-radius: 16px;
    padding: 1.5rem;
    transition: all 0.3s;
    cursor: pointer;
}

.skill-card:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    border-color: #D1D5DB;
}

.skill-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1rem;
}

.skill-user {
    display: flex;
    gap: 0.75rem;
}

.skill-avatar {
    width: 48px;
    height: 48px;
    background-color: #F3F4F6;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
}

.skill-user-info h3 {
    font-weight: 600;
    color: #111827;
    font-size: 1rem;
    margin-bottom: 0.25rem;
}

.skill-rating {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.875rem;
    color: #6B7280;
}

.skill-level {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background-color: #F3F4F6;
    color: #6B7280;
    border-radius: 9999px;
}

.skill-description {
    font-size: 0.875rem;
    color: #6B7280;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}

.skill-exchange {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 1rem;
}

.skill-exchange-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.skill-exchange-label {
    font-size: 0.75rem;
    color: #6B7280;
    width: 4rem;
}

.skill-exchange-value {
    flex: 1;
    background-color: #F9FAFB;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    font-size: 0.875rem;
    font-weight: 500;
    color: #111827;
}

.skill-connect-btn {
    width: 100%;
    padding: 0.625rem 1rem;
    background-color: #111827;
    color: white;
    border: none;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
}

.skill-card:hover .skill-connect-btn {
    transform: scale(1.05);
}

.skill-connect-btn:hover {
    background-color: #1F2937;
}

/* Empty State */
.empty-state {
    text-align: center;
    padding: 4rem 0;
}

.empty-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
}

.empty-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: #111827;
    margin-bottom: 0.5rem;
}

.empty-text {
    color: #6B7280;
}

/* Responsive Design */
@media (min-width: 640px) {
    .hero-buttons {
        flex-direction: row;
    }
    
    .feature-grid {
        grid-template-columns: repeat(4, 1fr);
    }
}

@media (min-width: 768px) {
    .nav-menu {
        display: flex;
    }
    
    .hero-title {
        font-size: 3.75rem;
    }
    
    .skills-grid {
        grid-template-columns: repeat(2, 1fr);
    }
}

@media (min-width: 1024px) {
    .skills-grid {
        grid-template-columns: repeat(3, 1fr);
    }
}

/* ============================================
   PROFILE MODAL STYLES
   ============================================ */

/* Profile Modal Overlay */
.profile-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(4px);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 1000;
    animation: fadeIn 0.2s ease-out;
}

.profile-modal-overlay.active {
    display: flex;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes fadeOut {
    from { opacity: 1; }
    to { opacity: 0; }
}

@keyframes slideUp {
    from {
        opacity: 0;
        transform: translateY(20px) scale(0.95);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* Profile Modal Card */
.profile-modal {
    background: linear-gradient(135deg, #FFF9E8 0%, #F5E6C8 100%);
    border-radius: 16px;
    width: 90%;
    max-width: 600px;
    max-height: 85vh;
    overflow: hidden;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
    animation: slideUp 0.3s ease-out;
    position: relative;
    display: flex;
    flex-direction: column;
}

.profile-modal-close {
    position: absolute;
    top: 1rem;
    right: 1rem;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(74, 74, 74, 0.9);
    color: #FFD966;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: bold;
    transition: all 0.2s;
    z-index: 10;
}

.profile-modal-close:hover {
    background: rgba(74, 74, 74, 1);
    transform: scale(1.1);
}

/* Profile Header */
.profile-header {
    padding: 2.5rem 2rem 1.5rem;
    text-align: center;
    background: linear-gradient(180deg, rgba(244, 196, 48, 0.15) 0%, transparent 100%);
}

.profile-avatar-large {
    width: 100px;
    height: 100px;
    background: linear-gradient(135deg, #F4C430 0%, #E6B422 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 3rem;
    margin: 0 auto 1rem;
    box-shadow: 0 4px 12px rgba(244, 196, 48, 0.3);
    border: 4px solid rgba(255, 255, 255, 0.5);
}

.profile-header-info {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 0.5rem;
}

.profile-name {
    font-size: 1.75rem;
    font-weight: 700;
    color: #2C2C2C;
}

.profile-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.375rem 0.75rem;
    background: linear-gradient(135deg, #F4C430 0%, #E6B422 100%);
    color: #2C2C2C;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    box-shadow: 0 2px 6px rgba(244, 196, 48, 0.3);
}

.profile-bio {
    color: #5A4D3B;
    font-size: 0.9375rem;
    line-height: 1.6;
    margin-top: 0.75rem;
    padding: 0 1rem;
}

/* Profile Tabs */
.profile-tabs {
    display: flex;
    gap: 0.5rem;
    padding: 1.25rem 2rem 0.75rem;
    border-bottom: 2px solid rgba(0, 0, 0, 0.05);
    background: linear-gradient(180deg, transparent 0%, rgba(244, 196, 48, 0.05) 100%);
}

.profile-tab {
    flex: 1;
    padding: 0.625rem 1rem;
    background: rgba(255, 255, 255, 0.5);
    border: 2px solid transparent;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #5A4D3B;
    cursor: pointer;
    transition: all 0.2s;
    text-align: center;
}

.profile-tab:hover {
    background: rgba(255, 255, 255, 0.8);
    border-color: rgba(244, 196, 48, 0.3);
}

.profile-tab.active {
    background: linear-gradient(135deg, #F4C430 0%, #E6B422 100%);
    color: #2C2C2C;
    border-color: #F4C430;
    box-shadow: 0 2px 6px rgba(244, 196, 48, 0.3);
}

/* Profile Content */
.profile-content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem 2rem 2rem;
}

.profile-tab-panel {
    display: none;
    animation: tabSlideIn 0.3s ease-out;
}

.profile-tab-panel.active {
    display: block;
}

@keyframes tabSlideIn {
    from {
        opacity: 0;
        transform: translateX(-10px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.profile-section {
    margin-bottom: 1.5rem;
}

.profile-section-title {
    font-size: 0.875rem;
    font-weight: 700;
    color: #8B7E6A;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin-bottom: 0.75rem;
}

.profile-info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
}

.profile-info-item {
    background: rgba(255, 255, 255, 0.6);
    padding: 1rem;
    border-radius: 12px;
    border: 1px solid rgba(0, 0, 0, 0.05);
}

.profile-info-label {
    font-size: 0.75rem;
    color: #8B7E6A;
    font-weight: 600;
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.profile-info-value {
    font-size: 1rem;
    color: #2C2C2C;
    font-weight: 600;
}

.skill-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
}

.skill-tag {
    padding: 0.5rem 1rem;
    background: rgba(255, 255, 255, 0.8);
    border: 2px solid rgba(244, 196, 48, 0.3);
    border-radius: 20px;
    font-size: 0.875rem;
    color: #2C2C2C;
    font-weight: 500;
    transition: all 0.2s;
}

.skill-tag:hover {
    background: linear-gradient(135deg, #F4C430 0%, #E6B422 100%);
    border-color: #F4C430;
    transform: translateY(-2px);
    box-shadow: 0 2px 6px rgba(244, 196, 48, 0.3);
}

.skill-tag.level-expert {
    border-color: #22C55E;
    background: rgba(34, 197, 94, 0.1);
}

.skill-tag.level-intermediate {
    border-color: #F59E0B;
    background: rgba(245, 158, 11, 0.1);
}

.skill-tag.level-beginner {
    border-color: #3B82F6;
    background: rgba(59, 130, 246, 0.1);
}

.empty-state-small {
    text-align: center;
    padding: 2rem 1rem;
    color: #8B7E6A;
}

.empty-state-small .empty-state-icon {
    font-size: 3rem;
    margin-bottom: 0.5rem;
    opacity: 0.5;
}

/* Action Buttons */
.profile-actions {
    padding: 1.25rem 2rem;
    background: linear-gradient(180deg, rgba(244, 196, 48, 0.05) 0%, transparent 100%);
    border-top: 2px solid rgba(0, 0, 0, 0.05);
    display: flex;
    gap: 0.75rem;
}

.profile-action-btn {
    flex: 1;
    padding: 0.875rem 1.5rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 0.9375rem;
    cursor: pointer;
    transition: all 0.2s;
    border: 2px solid transparent;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.profile-action-btn.primary {
    background: linear-gradient(135deg, #F4C430 0%, #E6B422 100%);
    color: #2C2C2C;
    box-shadow: 0 2px 6px rgba(244, 196, 48, 0.3);
}

.profile-action-btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(244, 196, 48, 0.4);
}

.profile-action-btn.secondary {
    background: rgba(255, 255, 255, 0.8);
    color: #2C2C2C;
    border-color: rgba(0, 0, 0, 0.1);
}

.profile-action-btn.secondary:hover {
    background: rgba(255, 255, 255, 1);
    border-color: #F4C430;
}

/* Make avatar clickable */
.skill-avatar {
    cursor: pointer;
    transition: all 0.2s;
}

.skill-avatar:hover {
    transform: scale(1.1);
    box-shadow: 0 4px 12px rgba(244, 196, 48, 0.3);
}

/* Responsive */
@media (max-width: 768px) {
    .profile-modal {
        width: 100%;
        max-width: 100%;
        max-height: 90vh;
        border-radius: 16px 16px 0 0;
        margin-top: auto;
        animation: slideUpMobile 0.3s ease-out;
    }

    @keyframes slideUpMobile {
        from {
            transform: translateY(100%);
        }
        to {
            transform: translateY(0);
        }
    }

    .profile-header,
    .profile-tabs,
    .profile-content,
    .profile-actions {
        padding-left: 1.25rem;
        padding-right: 1.25rem;
    }

    .profile-info-grid {
        grid-template-columns: 1fr;
    }

    .profile-tabs {
        gap: 0.375rem;
    }

    .profile-tab {
        padding: 0.5rem 0.75rem;
        font-size: 0.8125rem;
    }

    .profile-actions {
        flex-direction: column;
    }
}
